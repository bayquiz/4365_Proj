import java.util.Scanner;
import java.util.Arrays;
import java.util.ArrayList;

public class sell {

    Integer pid;
    String name;
    Double price;
    Integer quantity;
    

    public sell (Integer pid, String name, Double price, Integer quantity){
        
        this.pid = pid;
        this.name = name;
        this.price = price;
        this.quantity = quantity;
        
        name=" ";
        pid=0;
        price = 0.0; 
        }

public int getPid(){
    return pid;
}

public String getName(){
    return name;

}

public double getPrice(){
    return price;
}

public int getquantity(){
    return quantity;
}

public void setPid (){
    this.pid = pid;
}

public void setName(){
    this.name = name;
}

public void setPrice (){
    this.price = price;
}



public void sellItem(){
    
    String [] productNamesArray= { };
    int []  priceProductArray={};
    int [] productCountArray= {};
    //sell = new sell();
    Integer i;

    Scanner input = new Scanner(System.in);

    System.out.println ("How many items are you selling? ");
    quantity = input.nextInt();
    String [] productNameArray = new String[quantity];

    for(i = 0; i < quantity; i++){
        System.out.println("Enter the product name" + (i+1) + ": ");
        productNameArray[i]=input.next(); 
    }

    input.close();

    System.out.println("Your products for sale are: ");
    for(i = 0; i < quantity; i++){
        System.out.println(productNamesArray[i]);
        }
    }

    
    }
  
